{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "nginx-proxy-conf",
            "host": {
                "sourcePath": "/var/app/current/proxy/conf.d"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "app-api",
            "image": "temalcoolgel/app-api:latest",
            "essential": true,
            "memory": 128
        },
        {
            "name": "app-ui",
            "image": "temalcoolgel/app-ui:latest",
            "essential": true,
            "memory": 128
        },
        {
            "name": "nginx-proxy",
            "image": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "app-api",
                "app-ui"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "awseb-logs-nginx-proxy",
                    "containerPath": "/var/log/nginx"
                },
                {
                    "sourceVolume": "nginx-proxy-conf",
                    "containerPath": "/etc/nginx/conf.d",
                    "readOnly": true
                }
            ]
        }
    ]
}